	selectedPlayer = player
end)

-- Teleport Button
local teleportBtn = Instance.new("TextButton")
teleportBtn.Size = UDim2.new(1, 0, 0, 30)
teleportBtn.Position = UDim2.new(0, 0, 1, -30)
teleportBtn.Text = "Teleport"

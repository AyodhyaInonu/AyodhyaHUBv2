-- Section Names
local sectionNames = {"Utilities", "Tags", "Profile"}
local sections = {}

-- Make Sections
for i, name in ipairs(sectionNames) do
	local sectionFrame = Instance.new("Frame")
	sectionFrame.Size = UDim2.new(1, -20, 1, -80)
	sectionFrame.Position = UDim2.new(0, 10, 0, 70)
	sectionFrame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
	sectionFrame.Visible = (i == 1) -- Show first section by default
	sectionFrame.Parent = frame
	Instance.new("UICorner", sectionFrame)
	sections[name] = sectionFrame

	-- Tab Button
	local btn = Instance.new("TextButton")
	btn.Size = UDim2.new(0, 80, 0, 25)
	btn.Position = UDim2.new(0, 10 + (i - 1) * 90, 0, 35)
	btn.Text = name
	btn.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
	btn.TextColor3 = Color3.fromRGB(255, 255, 255)
	btn.Font = Enum.Font.SourceSansBold
	btn.TextSize = 14
	btn.Parent = frame
	Instance.new("UICorner", btn)

	btn.MouseButton1Click:Connect(function()
		for secName, sec in pairs(sections) do
			sec.Visible = (secName == name)
		end
	end)
end

-- Move Buttons into Sections (example)
espBtn.Parent = sections["Utilities"]
teleportFrame.Parent = sections["Utilities"]
profileFrame.Parent = sections["Profile"]

-- Noclip Button inside Utilities section
local noclip = false
local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()

local noclipBtn = Instance.new("TextButton")
noclipBtn.Size = UDim2.new(0, 180, 0, 30)
noclipBtn.Position = UDim2.new(0, 155, 0, 35)
noclipBtn.Text = "Toggle Noclip"
noclipBtn.BackgroundColor3 = Color3.fromRGB(80, 80, 80)
noclipBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
noclipBtn.Font = Enum.Font.SourceSansBold
noclipBtn.TextSize = 16
noclipBtn.Parent = sections["Utilities"]
Instance.new("UICorner", noclipBtn)

-- Noclip Toggle
noclipBtn.MouseButton1Click:Connect(function()
	noclip = not noclip
	noclipBtn.Text = noclip and "Noclip: ON" or "Noclip: OFF"

	if not noclip and character then
		for _, part in pairs(character:GetDescendants()) do
			if part:IsA("BasePart") then
				part.CanCollide = true
			end
		end
	end
end)

-- Apply Noclip effect each frame
game:GetService("RunService").Stepped:Connect(function()
	if noclip and character then
		for _, part in pairs(character:GetDescendants()) do
			if part:IsA("BasePart") then
				part.CanCollide = false
			end
		end
	end
end)

local uis = game:GetService("UserInputService")
local RunService = game:GetService("RunService")
local LocalPlayer = game.Players.LocalPlayer

local flightOn = false
local speedOn = false
local bodyGyro, bodyVelocity
local connection

-- SPEED BOOST BUTTON
local speedBtn = Instance.new("TextButton")
speedBtn.Size = UDim2.new(0, 120, 0, 30)
speedBtn.Position = UDim2.new(0, 155, 0, 75)
speedBtn.Text = "Speed: OFF"
speedBtn.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
speedBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
speedBtn.Font = Enum.Font.SourceSansBold
speedBtn.TextSize = 14
speedBtn.Parent = sections["Utilities"]
Instance.new("UICorner", speedBtn)

speedBtn.MouseButton1Click:Connect(function()
	speedOn = not speedOn
	local hum = LocalPlayer.Character and LocalPlayer.Character:FindFirstChildOfClass("Humanoid")
	if hum then
		hum.WalkSpeed = speedOn and 50 or 16
	end
	speedBtn.Text = "Speed: " .. (speedOn and "ON" or "OFF")
end)

-- FLIGHT MODE BUTTON
local flyBtn = Instance.new("TextButton")
flyBtn.Size = UDim2.new(0, 120, 0, 30)
flyBtn.Position = UDim2.new(0, 155, 0, 115)
flyBtn.Text = "Flight: OFF"
flyBtn.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
flyBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
flyBtn.Font = Enum.Font.SourceSansBold
flyBtn.TextSize = 14
flyBtn.Parent = sections["Utilities"]
Instance.new("UICorner", flyBtn)

flyBtn.MouseButton1Click:Connect(function()
	flightOn = not flightOn
	local char = LocalPlayer.Character
	local root = char and char:FindFirstChild("HumanoidRootPart")

	if flightOn and root then
		bodyGyro = Instance.new("BodyGyro", root)
		bodyGyro.MaxTorque = Vector3.new(9e9, 9e9, 9e9)
		bodyGyro.P = 9e4
		bodyGyro.CFrame = root.CFrame

		bodyVelocity = Instance.new("BodyVelocity", root)
		bodyVelocity.MaxForce = Vector3.new(9e9, 9e9, 9e9)
		bodyVelocity.Velocity = Vector3.zero

		connection = RunService.RenderStepped:Connect(function()
			if flightOn and root then
				bodyGyro.CFrame = workspace.CurrentCamera.CFrame
				local direction = Vector3.zero
				if uis:IsKeyDown(Enum.KeyCode.W) then
					direction = workspace.CurrentCamera.CFrame.LookVector
				elseif uis:IsKeyDown(Enum.KeyCode.S) then
					direction = -workspace.CurrentCamera.CFrame.LookVector
				elseif uis:IsKeyDown(Enum.KeyCode.Space) then
					direction = Vector3.new(0, 1, 0)
				elseif uis:IsKeyDown(Enum.KeyCode.LeftControl) then
					direction = Vector3.new(0, -1, 0)
				end
				bodyVelocity.Velocity = direction * 50
			end
		end)
	else
		if bodyGyro then bodyGyro:Destroy() end
		if bodyVelocity then bodyVelocity:Destroy() end
		if connection then connection:Disconnect() end
	end
	flyBtn.Text = "Flight: " .. (flightOn and "ON" or "OFF")
end)

local WallTP = Instance.new("TextButton")
WallTP.Name = "WallTP"
WallTP.Parent = sections["Utilities"]
WallTP.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
WallTP.Position = UDim2.new(0, 155, 0, 155)
WallTP.Size = UDim2.new(0, 120, 0, 30)
WallTP.Font = Enum.Font.SourceSansBold
WallTP.Text = "Wall Teleport"
WallTP.TextColor3 = Color3.fromRGB(255, 255, 255)
WallTP.TextSize = 14
Instance.new("UICorner", WallTP)

-- Functionality: Move player 10 studs forward
WallTP.MouseButton1Click:Connect(function()
	local character = game.Players.LocalPlayer.Character
	if character and character:FindFirstChild("HumanoidRootPart") then
		local hrp = character.HumanoidRootPart
		hrp.CFrame = hrp.CFrame + hrp.CFrame.LookVector * 10
	end
end)

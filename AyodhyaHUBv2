-- Section Names
local sectionNames = {"Utilities", "Tags", "Profile"}
local sections = {}

-- Make Sections
for i, name in ipairs(sectionNames) do
	local sectionFrame = Instance.new("Frame")
	sectionFrame.Size = UDim2.new(1, -20, 1, -80)
	sectionFrame.Position = UDim2.new(0, 10, 0, 70)
	sectionFrame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
	sectionFrame.Visible = (i == 1) -- Show first section by default
	sectionFrame.Parent = frame
	Instance.new("UICorner", sectionFrame)
	sections[name] = sectionFrame

	-- Tab Button
	local btn = Instance.new("TextButton")
	btn.Size = UDim2.new(0, 80, 0, 25)
	btn.Position = UDim2.new(0, 10 + (i - 1) * 90, 0, 35)
	btn.Text = name
	btn.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
	btn.TextColor3 = Color3.fromRGB(255, 255, 255)
	btn.Font = Enum.Font.SourceSansBold
	btn.TextSize = 14
	btn.Parent = frame
	Instance.new("UICorner", btn)

	btn.MouseButton1Click:Connect(function()
		for secName, sec in pairs(sections) do
			sec.Visible = (secName == name)
		end
	end)
end

-- Move Buttons into Sections (example)
espBtn.Parent = sections["Utilities"]
teleportFrame.Parent = sections["Utilities"]
profileFrame.Parent = sections["Profile"]

-- Setup
local Player = game.Players.LocalPlayer
local Char = Player.Character or Player.CharacterAdded:Wait()
local HRP = Char:WaitForChild("HumanoidRootPart")
local flying = false
local bodyGyro, bodyVel
local direction = Vector3.new()

-- Create Utility Section Frame (or use existing one)
local utilFrame = yourUtilitiesSectionFrame -- replace with your actual Utilities frame

-- Fly Toggle Button
local flyBtn = Instance.new("TextButton")
flyBtn.Size = UDim2.new(0.3, 0, 0, 40)
flyBtn.Position = UDim2.new(0.28, 0, 0.144, 0)
flyBtn.Text = "Fly: OFF"
flyBtn.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
flyBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
flyBtn.Font = Enum.Font.SourceSansBold
flyBtn.TextSize = 18
flyBtn.Parent = sections["Utilities"]
Instance.new("UICorner", flyBtn)

-- Fly Control Buttons
local upBtn = Instance.new("TextButton")
upBtn.Size = UDim2.new(0.3, 0, 0, 40)
upBtn.Position = UDim2.new(0.05, 0, 0.2, 0)
upBtn.Text = "Up"
upBtn.BackgroundColor3 = Color3.fromRGB(40, 100, 200)
upBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
upBtn.Font = Enum.Font.SourceSansBold
upBtn.TextSize = 18
upBtn.Visible = false
upBtn.Parent = utilFrame
Instance.new("UICorner", upBtn)

local downBtn = Instance.new("TextButton")
downBtn.Size = UDim2.new(0.3, 0, 0, 40)
downBtn.Position = UDim2.new(0.05, 0, 0.3, 0)
downBtn.Text = "Down"
downBtn.BackgroundColor3 = Color3.fromRGB(200, 100, 40)
downBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
downBtn.Font = Enum.Font.SourceSansBold
downBtn.TextSize = 18
downBtn.Visible = false
downBtn.Parent = utilFrame
Instance.new("UICorner", downBtn)

-- Toggle Fly Function
local function toggleFly()
	flying = not flying
	flyBtn.Text = flying and "Fly: ON" or "Fly: OFF"
	upBtn.Visible = flying
	downBtn.Visible = flying

	if flying then
		bodyGyro = Instance.new("BodyGyro", HRP)
		bodyGyro.P = 9e4
		bodyGyro.MaxTorque = Vector3.new(9e9, 9e9, 9e9)
		bodyGyro.CFrame = HRP.CFrame

		bodyVel = Instance.new("BodyVelocity", HRP)
		bodyVel.Velocity = Vector3.new(0, 0, 0)
		bodyVel.MaxForce = Vector3.new(9e9, 9e9, 9e9)

		game:GetService("RunService").RenderStepped:Connect(function()
			if flying then
				bodyGyro.CFrame = workspace.CurrentCamera.CFrame
				bodyVel.Velocity = direction * 50
			end
		end)
	else
		if bodyGyro then bodyGyro:Destroy() end
		if bodyVel then bodyVel:Destroy() end
		direction = Vector3.new()
	end
end

-- Controls
flyBtn.MouseButton1Click:Connect(toggleFly)
upBtn.MouseButton1Click:Connect(function()
	direction = Vector3.new(0, 1, 0)
end)
downBtn.MouseButton1Click:Connect(function()
	direction = Vector3.new(0, -1, 0)
end)
